<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="1080.0" prefWidth="1920.0" stylesheets="@../Style/app.css" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Elo.MovieCompare">
    <top>
        <HBox prefHeight="100.0" prefWidth="200.0" styleClass="headerBanner">
            <children>

                <Label fx:id="title" layoutX="0" maxWidth="1200.0" minWidth="960.0" prefHeight="100.0" prefWidth="1200.0" styleClass="appTitle" text="ELO RANKING" />
            </children>
        </HBox>
    </top>
    <center>
        <AnchorPane maxWidth="1200.0" minHeight="400.0" minWidth="960.0" prefWidth="1200.0" BorderPane.alignment="CENTER">
            <children>
                <Pane layoutY="12.0" prefHeight="274.0" prefWidth="1200.0" styleClass="comparePane">
                    <children>
                        <ImageView fx:id="compareImage1" fitHeight="150.0" fitWidth="220.0" layoutX="245.0" layoutY="31.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../Style/img/heat.jpg" />
                            </image>
                        </ImageView>
                        <ImageView fx:id="compareImage2" fitHeight="150.0" fitWidth="220.0" layoutX="735.0" layoutY="31.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../Style/img/intersteller.jpg" />
                            </image>
                        </ImageView>
                  <Label fx:id="filmLabel1" layoutX="341.0" layoutY="203.0" text="Film1" styleClass="filmTitle"/>
                  <Label fx:id="filmLabel2" layoutX="831.0" layoutY="203.0" text="Film2" styleClass="filmTitle" />
                  <Label fx:id="filmYear1" layoutX="341.0" layoutY="231.0" text="Year1" styleClass="filmYear" />
                  <Label fx:id="filmYear2" layoutX="831.0" layoutY="231.0" text="Year1" styleClass="filmYear"  />
                    </children>
                </Pane>
            </children>
        </AnchorPane>
    </center>
    <left>
        <Pane BorderPane.alignment="CENTER" />
    </left>
    <right>
        <Pane BorderPane.alignment="CENTER" />
    </right>

    <bottom>
        <Pane minWidth="1200" prefHeight="100.0" prefWidth="1200.0" styleClass="headerBanner" BorderPane.alignment="CENTER">
            <children>
                <Button contentDisplay="CENTER" layoutX="490" layoutY="25" mnemonicParsing="false" onAction="#GotoUserFilm" prefHeight="50" prefWidth="220" styleClass="button" text="list of films" BorderPane.alignment="CENTER" />
            </children>
        </Pane>

    </bottom>
</BorderPane>
